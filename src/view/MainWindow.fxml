         </GridPane.margin></Canvas>
      <Canvas fx:id="playerCanvas" height="450.0" onMouseClicked="#drawFigure" width="450.0" GridPane.valignment="TOP">
         <GridPane.margin>
            <Insets left="5.0" right="5.0" top="5.0" />
         </GridPane.margin></Canvas>
      <VBox prefHeight="481.0" prefWidth="137.0" GridPane.columnIndex="1">
         <children>
            <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearBoard" prefHeight="25.0" prefWidth="100.0" text="Clear Board">
